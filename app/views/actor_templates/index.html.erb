<h1>
  List of all actors
</h1>

<hr>

<form action = "/insert_actor_record", method = "post">

<div>
<label for = "name">Name</label>
<input id = "name" type = "text" name = "the_name">
</div>

<div>
<label for = "Dob">Dob</label>
<input id = "Dob" type = "text" name = "the_dob">
</div>

<div>
<label for = "Bio">Bio</label>
<input id = "Bio" type = "text" name = "the_bio">
</div>

<div>
<label for = "Image">Image</label>
<input id = "Image" type = "text" name = "the_image">
</div>

<button>Create actor</button>
</form>


<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_actors.each do |an_actor| %>
  <tr>
    <td>
      <%= an_actor.id %>
    </td>

    <td>
      <img src="<%= an_actor.image %>" style="width:250px;">
    </td>

    <td>
      <%= an_actor.name %>
    </td>

    <td>
      <%= an_actor.dob %>
    </td>

    <td>
      <a href="/actors/<%= an_actor.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
